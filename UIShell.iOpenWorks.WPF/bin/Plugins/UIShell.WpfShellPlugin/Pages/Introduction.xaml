<UserControl x:Class="UIShell.WpfShellPlugin.Pages.Introduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <ScrollViewer>
            <StackPanel >
                <TextBlock Margin="0,0,0,10"/>
                <TextBlock Text="请扫描物料编码"  Margin="0,0,0,8" FontSize="15"/>               
               
                <Canvas Background="AliceBlue" Margin="0,0,0,80">
                    <Label Canvas.Top="30" Canvas.Left="20">物料名</Label>
                    <TextBox Canvas.Top="30" Canvas.Left="65" Width="100"/>
                    <Label Canvas.Top="30" Canvas.Left="170">物料号</Label>
                    <TextBox Canvas.Top="30" Canvas.Left="215" Width="125"/>
                    <Label Canvas.Top="30" Canvas.Left="345">数量</Label>
                    <TextBox Canvas.Top="30" Canvas.Left="380" Width="40"/>
                </Canvas>
                <Image Width="1920px" Source="/UIShell.WpfShellPlugin;component/Assets/编码.png" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
